{
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "python -m pip install --upgrade pip && pip install -r requirements.txt"
    },
    "deploy": {
        "startCommand": "gunicorn agilegtd.wsgi:application --log-file -",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
} 